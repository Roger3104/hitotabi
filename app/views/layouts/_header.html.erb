<header>
    <nav class="navbar navbar-expand-lg pl-0">
      <div class="container mt-3 pl-0 logos">
        <a class="navbar-brand" href="/">
          <%= image_tag 'coffee.svg', class:"mr-2 pb-0 coffee" %>
          <%= image_tag 'logo.png', height: '25' %>
          <%= image_tag 'logo_sub2.png', height: '12', class:"ml-4 mt-1 logo_sub" %>
        </a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <% if request.path.match(/\/admin(\/)?/) && admin_signed_in?%>
              <li>
                <%= link_to admin_users_path, class:"a-header" do %>
                  <div class="nav-link text-light a-header">会員一覧</div>
                <%end%>
              </li>
              <li>
                <%= link_to admin_posts_path, class:"a-header" do %>
                  <div class="nav-link a-header">投稿一覧</div>
                <%end%>
              </li>
              <li>
                <%= link_to admin_tags_path, class:"a-header" do %>
                  <div class="nav-link a-header">タグ</div>
                <%end%>
              </li>
              <li>
                <%= link_to admin_categories_path, class:"a-header" do %>
                  <div class="nav-link a-header">カテゴリー</div>
                <%end%>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, class:"a-header", method: :delete do %>
                  <div class="nav-link a-header">ログアウト</div>
                <%end%>
              </li>
            <% elsif request.path.match(/\/admin(\/)?/) %>
              <li>
                <%= link_to new_admin_session_path, class:"a-header" do %>
                  <div class="nav-link a-header">ログイン</div>
                <%end%>
              </li>
            <% elsif user_signed_in? %>
              <li>
                <%= link_to users_path, class:"d-flex justify-content-start", class:"a-header" do %>
                  <div class="nav-link a-header mt-2"><i class="fas fa-user-circle"></i> <%= current_user.name %>さん</div>
                <%end%>
              </li>
              <li>
                <%= link_to new_post_path, class:"a-header" do %>
                  <div class="nav-link a-header mt-2"><i class="fa fa-camera mr-2" aria-hidden="true"></i>投稿する</div>
                <%end%>
              </li>
            <% else %>
              <li>
                <%= link_to posts_path, class:"a-header" do %>
                  <div class="nav-link a-header">ひと旅</div>
                <%end%>
              </li>
              <li>
                <%= link_to new_user_registration_path, class:"a-header" do %>
                  <div class="nav-link a-header">新規登録</div>
                <%end%>
              </li>
              <li>
                <%= link_to new_user_session_path, class:"a-header" do %>
                  <div class="nav-link a-header">ログイン</div>
                <%end%>
              </li>
              <li>
                <%= link_to users_guest_sign_in_path, method: :post, class:"a-header" do %>
                  <div class="nav-link a-header">ゲストログイン</div>
                <%end%>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div>
      <% if request.path.match(/\/admin(\/)?/) && admin_signed_in? %>
      <% else %>
      <% end %>
      <!--検索機能用-->
    </div>
  </nav>
</header>