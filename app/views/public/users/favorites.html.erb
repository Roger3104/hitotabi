<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">Favorites</span>
            <span class="text-ja">行ってみたい場所</span>
          </h1>
        </header>
      </div>
      <div class="archive-nav">
        <ul class="page-list">
          <li><%= link_to "すべて", posts_path, class:"link" %></li>
          <li  class="is-current"><%= link_to "行ってみたい場所", favorites_users_path(@user), class:"link" %></li>
          <li><%= link_to "おすすめ", recommend_users_path(@user), class:"link" %></li>
          <li><%= link_to "タグから探す", tags_path, class:"link" %></li>
        </ul>
      </div>
      <div class='col-md-12 mb-5'>
        <div class="d-flex align-content-center justify-content-center row py-1 border-bottom">
          <div class='col-lg-10 col-md-10 col-sm-12 mb-5'>
            <h2 class="sub-header">map</h2>
            <%= render "/public/posts/index_map", posts: @favorite_posts %>
          </div>
        </div>
        <div class="d-flex justify-content-center row flex-wrap py-1" id="bottom">
          <%= render 'public/posts/index', posts: @favorite_posts %>
        </div>
        <div class="text-center row py-1">
          <%= paginate @favorite_posts %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).on('turbolinks:load', function() {
  // turbolinksを無効化したい処理
  });
</script>