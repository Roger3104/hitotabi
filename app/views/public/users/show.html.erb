<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">my page</span>
            <span class="text-ja">会員ページ</span>
          </h1>
        </header>
      </div>
      <table class="table">
          <tbody>
              <tr>
                  <th scope="row" class='col-lg-4'>user name</th>
                  <td class='col-lg-8 py-2'><%= current_user.name %></td>
              </tr>
              <tr>
                  <th scope="row" class='col-lg-4'>email</th>
                  <td class='col-lg-8 py-2'><%= current_user.email %></td>
              </tr>

              <tr>
                  <th scope="row" class='col-lg-4'>tags</th>
                  <td class='col-lg-8 py-2'></td>
              </tr>
          </tbody>
        </table>
        <div class="row online-btns my-5 ">
          <span class="col-4"></span>
          <%= link_to "edit", edit_users_path, class: "online-btn col-4 text-center" %>
        </div>
        <div class="row online-btns my-5 ">
          <span class="col-4"></span>
          <%= link_to "your posts", users_index_path, class: "online-btn col-4 text-center" %>
        </div>
        <div class="content-wrap my-5">
          <header class="page-header heading">
            <h1 class="mb-5 heading__ttl">
              <span class="text-en">recent posts</span>
              <span class="text-ja">最近の投稿</span>
            </h1>
          </header>
        </div>
    </div>
  </div>
</div>