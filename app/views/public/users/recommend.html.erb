<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">recommend</span>
            <span class="text-ja">おすすめ</span>
          </h1>
        </header>
      </div>
      <div class="archive-nav">
        <ul class="page-list">
          <li><%= link_to "すべて", posts_path, class:"link" %></li>
          <li><%= link_to "行ってみたい場所", favorites_users_path(@user), class:"link" %></li>
          <li class="is-current"><%= link_to "おすすめ", recommend_users_path(@user), class:"link" %></li>
          <li><%= link_to "タグから探す", tags_path, class:"link" %></li>
        </ul>
      </div>
      <% @posts.each do |tag_id, posts| %>
        <div class="row" id="bottom">
        <div class='col-md-12 mb-5'>
          <div>
           <strong>#<%= Tag.find(tag_id).name %></strong>
          </div>
          <div class="d-flex align-content-start row flex-wrap py-1">
            <%= render 'public/posts/index', posts: posts %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>