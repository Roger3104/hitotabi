<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">recommend</span>
            <span class="text-ja">おすすめ</span>
          </h1>
        </header>
      </div>
      <div class="archive-nav">
        <ul class="page-list">
          <li><%= link_to "ひと旅", posts_path, class:"link" %></li>
          <li><%= link_to "行ってみたい場所", favorites_users_path(@user), data: {"turbolinks" => false}, class:"link" %></li>
          <li class="is-current"><%= link_to "おすすめ", recommend_users_path(@user), class:"link" %></li>
          <li><%= link_to "タグから探す", tags_path, class:"link" %></li>
        </ul>
      </div>
      <% @posts.each do |tag_id, posts| %>
        <div class="row d-flex justify-content-center" id="bottom">
          <div class='col-lg-10 col-md-10'>
            <div>
              <h2 class="sub-header mb-0">#<%= link_to Tag.find(tag_id).name, tag_path(tag_id), class:"link" %></h2>
            </div>
            <div class=" row flex-wrap py-1 detailed_index">
              <%= render 'public/posts/index', posts: posts %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>