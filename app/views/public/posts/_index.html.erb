<div class="masonry-wrapper">
  <div class="masonry">
    <% posts.each do |post| %>
      <div class="masonry-item">
          <%= link_to post_path(post.id), class:"masonry-content image_link" do %>
            <% if post.image.attached? %>
              <%= image_tag post.image, loading:"lazy" %>
             <% else %>
              <%= image_tag 'no_image', loading:"lazy" %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>
</div>