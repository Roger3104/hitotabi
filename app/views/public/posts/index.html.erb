<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">Explore</span>
            <span class="text-ja">ひと旅探す</span>
          </h1>
        </header>
      </div>
      <div class="row">
        <div class='col-md-12 mb-5'>
          <div class="d-flex align-content-start row flex-wrap py-1">
            <%= render 'index', posts: @posts %>
          </div>
        </div>
      </div>
      <div class="row py-1">
        <div class='col-md-12 d-flex justify-content-center mb-5'>
          <%= paginate @posts %>
        </div>
      </div>
    </div>
</div>