<% if user_signed_in? %>
  <% if current_user.following?(user) && current_user != post.user %>
    <%= link_to users_relationships_path(user_id: user.id, post_id: post.id), method: :delete, class: "link-btn", remote: true do%>
      <span><i class="fas fa-user-minus" style="color: black;"></i> フォローを外す</span>
    <% end %>
  <% elsif current_user != post.user%>
    <%= link_to users_relationships_path(user_id: user.id, post_id: post.id), method: :post, class: "link-btn", remote: true do %>
      <span><i class="fas fa-user-plus" style="color: black;"></i> フォローする</span>
    <% end %>
  <% end %>
<% end %>