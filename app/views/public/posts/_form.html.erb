<%= form_with(model: post, local: true, data: { controller: "images"}) do |f| %>
  <div class="form-group row">
    <%= f.label :title, 'タイトル', class:'col-3 px-0 mx-auto' %>
    <%= f.text_field :title, autofocus: true, class:'col-7 mx-auto form-control' %>
  </div>
  <div class="form-group row">
    <%= f.label :date, '撮影日時', class:'col-3 px-0 mx-auto' %>
    <%= f.date_field :date, value: post.date, class:'col-7 mx-auto form-control' %>
  </div>
  <div class="form-group row">
    <%= f.label :content, '紹介文', class:'col-3 px-0 mx-auto' %>
    <%= f.text_area :content, class:'col-7 mx-auto form-control' %>
  </div>
  <div class="form-group row">
    <%= f.label :image, '画像', class:'col-3 px-0 mx-auto' %>
    <%#= f.file_field :images, multiple: true, accept: "image/*", class:'col-3 px-0 mx-auto' %><!--accept: "image/*で画像のみに限定-->
    <!--できれば画像選択後に画像表示したい-->
    <%= f.file_field :images, multiple: true, accept: "image/*", data: { images_target: "select", action: "change->images#selectImages" } %>
    <p data-images-target="error" class="text-red-600"></p> <!--画像投稿エラー文-->
  </div>
  <div data-images-target="preview">
    <% if post.images.attached? %>
      <% post.images.each do |image| %>
        <div class="image-box inline-flex mx-1 mb-5" data-controller="images" data-images-target= "image_box">
          <div class="text-center">
            <%= image_tag image, width: "100" %>
            <a class="link cursor-pointer" data-action="click->images#deleteImage"><i class="fa fa-trash" aria-hidden="true"></i></a>
            <%= f.hidden_field :images, name: "post[images][]", style: "display: none", value: "#{image.blob.id}" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= f.hidden_field :latitude,:value =>"緯度", id: :lat %>
    <%= f.hidden_field :longitude,:value =>"経度", id: :lng %>
  </div>
  <div class="row">
  <%= render "new_map" %>
  </div>
  <div class="form-group row online-btns">
    <span class="col-5"></span>
    <%#= f.button "投稿", onclick: "submit():", class: "online-btn col-4" %>
    <input type="button" onclick="submit();" class="online-btn col-4" value="投稿">
  </div>
<% end %>