<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
        <div class="row justify-content-center">
          <div class="col-lg-10 col-md-10 post-img pb-0 text-center">
            <% if @post.image.attached? %>
              <%= image_tag @post.image, class: ' shadow' %>
            <% else %>
              <%= image_tag 'no_image', class:'img-fluid img-thumbnail shadow ' %>
            <% end %>
          </div>
          <div class="col-6 px-5">
            <h3><strong><%= @post.title %></strong></h3>
            <div><%= link_to @post.user.name, user_index_path(@post.user.id)%></div>
            <p class="my-3"><strong><%= l @post.date %></strong></p>
            <div class= "follow-<%= @user.id %>">
              <%= render "/public/relationships/btn", user: @user, post: @post %>
            </div>
            <div>
              <% if @post.user == current_user %>
                <%= @post.status %>
              <% end %>
            </div>
            <div class="my-3">
              <% @post.tags.each do |tag| %>
                <div class= "tag_area">
                  <div class= "tag_list"><p class="tag_link"><%=link_to tag.name, tag_path(tag.id), class:"tag_text"%></p></div>
                </div>
              <% end %>
            </div>
            <p class="my-3"><%= @post.content %></p>
          </div>
        </div>
      <% if @post.user == current_user %>
        <div class="row online-btns my-5 ">
          <span class="col-4"></span>
          <%= link_to "edit post", edit_post_path, class: "online-btn col-4 text-center" %>
        </div>
        <div class="row online-btns my-5 ">
          <span class="col-4"></span>
          <%= link_to "delete post", @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "online-btn col-4 text-center" %>
        </div>
      <% end %>
      <div class="row">
        <%= render "show_map", post: @post %>
      </div>
      <div class="row">
        <div id="comments-index">
          <%= render "public/comments/index", post: @post %>
        </div>
      </div>
      <div class="row">
        <div class="new_comment">
          <%= render "public/comments/form", post: @post, comment: @comment %>
        </div>
      </div>
    </div>
  </div>
</div>
