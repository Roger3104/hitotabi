<table>
  <tbody>
      <% post.comments.each do |comment| %>
      <tr>
        <td class="pt-4">
          <%= link_to users_path(comment.user), class:"link" do %>
            <strong><i class="fas fa-user-circle"></i> <%= comment.user.name %></strong>さん
          <% end %>
        </td>
      </tr>
      <tr class="border-bottom">
        <td class="py-3"><%= safe_join(comment.content.split("\n"),tag(:br)) %></td> <!--改行したものを表記-->
        <td class="pl-5">
          <% if comment.user == current_user %>
            <%= link_to post_comment_path(post, comment), method: :delete, remote: true do%>
              <i class="far fa-trash-alt" style="color: gray;"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>