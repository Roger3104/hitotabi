<%= form_with(model: comment, url: post_comments_path(post.id), method: :post) do |f| %>
  <%= f.text_area :content, rows:'5',placeholder: "コメントをここに", class: "w-100 form-control comment-textarea" %>
  <%= button_tag type: "送信", class: "btn btn-default" do %>
    <span><i class="fas fa-paper-plane"></i>送信</span>
  <% end %>
<% end %>