<div class='container'>
    <div class='row'>
      <div class="col-lg-12 col-md-10 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
        <div class="content-wrap">
          <header class="page-header heading">
            <h1 class="mb-5 heading__ttl">
              <span class="text-en">report</span>
              <span class="text-ja">通報</span>
            </h1>
          </header>
        </div>
        <div class="col-lg-7 col-md-8 col-sm-12 mx-auto">
          <%= form_with model:[@user, @report], url: users_reports_path do |f| %>
            <div class="form-group">
              <%= f.label :reason, class:'col-lg-2 offset-1 pl-0' do%>
                <span><strong>通報理由</strong></span>
              <% end %>
              <%= f.text_area :reason, rows:'3', class:"form-control" %>
              <%= f.label :url, class:'col-lg-2 offset-1 pl-0' do%>
                <span><strong>該当URL</strong></span>
              <% end %>
              <%= f.text_field :url, class:"form-control", placeholder:"url" %>
              <div class="form-group row d-flex justify-content-center">
                <%= f.button "通報する", type: 'button', onclick: "submit();", class: "link-btn-lg col-6" %> <!--Enter Keyで投稿処理を行わないためにf.buttonに変更-->
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>