<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">edit user</span>
            <span class="text-ja"><%= @user.name %>さんの会員情報編集</span>
          </h1>
        </header>
      </div>
      <div class="row">
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local:true, class: "container text-center pl-9" do |f| %>
        <div class="form-group row">
          <label class="col-3 pl-3">会員ID</label>
          <%= @user.id %>
        </div>

        <div class="form-group row">
          <label class="col-3 pl-3">ユーザー名</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group row">
          <label class="col-3">メールアドレス</label>
          <%= f.text_field :email %>
        </div>
        <div class="form-group row">
          <label class="col-3">会員ステータス</label>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", value: "false", class: "mr-3" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", value: "true" %>
        </div>
        <div class="form-group text-center">
          <div class="row online-btns my-5 ">
            <span class="col-4"></span>
            <%= f.submit "変更を保存", class: "online-btn col-4 text-center" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>