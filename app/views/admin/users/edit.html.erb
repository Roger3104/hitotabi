<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">edit user</span>
            <span class="text-ja"><%= @user.name %>さんの会員情報編集</span>
          </h1>
        </header>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-12 mx-auto">
        <h2 class="sub-header mb-5">infomation</h2>
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local:true, class: "container" do |f| %>
        <table>
          <tbody>
            <tr>
              <td class="pb-3"><strong>user id</strong></td>
              <td class="pl-5 pb-3">
                <%= @user.id %>
              </td>
            </tr>
            <tr>
              <td class="pb-3"><strong>name</strong></td>
              <td class="pl-5 pb-3">
                <%= @user.name %>
              </td>
            </tr>
            <tr>
              <td class="pb-3"><strong>email</strong></td>
              <td class="pl-5 pb-3"><%= @user.email %></td>
            </tr>
            <tr>
              <td class="pb-3"><strong>favorite place</strong></td>
              <td class="pl-5 pb-3"><%= @user.place %></td>
            </tr>
            <tr>
              <td class="pb-3"><strong>user status</strong></td>
              <td class="pl-5 pb-3">
                <%= f.radio_button :is_deleted, :false %>
                <%= f.label :is_deleted, "有効", value: "false", class: "mr-3" %>
                <%= f.radio_button :is_deleted, :true %>
                <%= f.label :is_deleted, "退会", value: "true" %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="form-group text-center">
          <div class="row online-btns my-5 ">
            <span class="col-4"></span>
            <%= f.submit "変更を保存", class: "online-btn col-4 text-center" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>