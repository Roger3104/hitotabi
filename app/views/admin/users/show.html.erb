<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">User</span>
            <span class="text-ja"><%= @user.name %>さんの会員情報</span>
          </h1>
        </header>
      </div>
      <div class="row">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td class="w-25">会員ID</td>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <td class="w-25">ユーザー名</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td class="w-25">メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td class="w-25">会員ステータス</td>
              <td>
                <% if @user.is_deleted == false %>
                  <strong class="text-success">有効</strong>
                <% else %>
                  <strong class="text-denger">退会済み</strong>
                <%end%>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="w-75 mx-auto">
          <div class="row online-btns my-5 ">
            <span class="col-4"></span>
            <%= link_to "編集する", edit_admin_user_path(@user.id), class: "online-btn col-4 text-center" %>
          </div>
          <div class="row online-btns my-5 ">
            <span class="col-4"></span>
            <%= link_to "投稿履歴一覧を見る", admin_root_path, class: "online-btn col-4 text-center" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>