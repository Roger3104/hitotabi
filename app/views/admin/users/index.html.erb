<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
        <header class="page-header heading">
          <h1 class="mb-5 heading__ttl">
            <span class="text-en">Users</span>
            <span class="text-ja">会員一覧</span>
          </h1>
        </header>
      </div>
      <div class="row px-5">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id), class: "border-bottom border-dark link" %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
                  <strong class="text-success">有効</strong>
                <% else %>
                  <strong class="test-muted">退会</strong>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>