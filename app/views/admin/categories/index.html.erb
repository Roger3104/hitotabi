<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
      <div class="content-wrap">
          <header class="page-header heading">
            <h1 class="mb-5 heading__ttl">
              <span class="text-en">Categories</span>
              <span class="text-ja">カテゴリー</span>
            </h1>
          </header>
        </div>
        <%= form_with model: @category, url: admin_categories_path do |f| %>
          <div class="form-group row">
            <%= f.label :name, 'カテゴリー名', class:'col-3 px-0 mx-auto' %>
            <%= f.text_field :name, autofocus: true, class:'col-7 mx-auto form-control' %>
          </div>
          <div class="form-group row online-btns my-5 ">
            <span class="col-4"></span>
            <%= f.submit "追加", class: "online-btn col-4" %>
          </div>
        <% end %>
        <div class="row px-5">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>カテゴリー名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to '編集', edit_admin_category_path(category), class: "text-dark border-bottom border-dark" %></td>
          <td><%= link_to '削除', admin_category_path(category), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "text-dark border-bottom border-dark" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
    </div>
  </div>
</div>