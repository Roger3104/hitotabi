<div class='container'>
    <div class='row'>
      <div class="col-lg-9 col-md-9 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
        <div class="content-wrap">
          <header class="page-header heading">
            <h1 class="mb-5 heading__ttl">
              <span class="text-en">reports</span>
              <span class="text-ja">通報一覧</span>
            </h1>
          </header>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>通報ID</th>
              <th>会員名</th>
              <th>通報者</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @reports.each do |report| %>
              <tr>
                <td>
                  <%= link_to report.id, admin_report_path(report) %>
                </td>
                <td>
                  <%= report.reported.name %>
                </td>
                <td>
                  <%= report.reporter.name %>
                </td>
                <td>
                  <%= report.status_i18n %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>