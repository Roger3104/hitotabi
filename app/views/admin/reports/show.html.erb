<div class='container'>
    <div class='row'>
      <div class="col-lg-9 col-md-9 col-sm-12 mx-6 mx-sm-auto px-auto my-5">
        <div class="content-wrap">
          <header class="page-header heading">
            <h1 class="mb-5 heading__ttl">
              <span class="text-en">details</span>
              <span class="text-ja">通報詳細</span>
            </h1>
          </header>
        </div>
        <div class="col-lg-9 mx-auto">
          <h2 class="sub-header mt-5">内容</h2>
        </div>
        <table class="table col-lg-8 mx-auto">
          <tbody>
            <tr>
              <td><strong>通報ID</strong></td>
              <td><%= @report.id %></td>
            </tr>
            <tr>
              <td><strong>会員名</strong></td>
              <td><%= link_to @report.reported.name, admin_user_path(@report.reported_id), class:"link" %></td>
            </tr>
            <tr>
              <td><strong>理由</strong></td>
              <td><%= @report.reason %></td>
            </tr>
            <tr>
              <td><strong>URL等</strong></td>
              <td><%= @report.url %></td>
            </tr>
            <tr>
              <td><strong>通報者</strong></td>
              <td><%= link_to @report.reporter.name, admin_user_path(@report.reporter_id), class:"link" %></td>
            </tr>
          </tbody>
        </table>
        <div class="col-lg-9 mx-auto">
          <h2 class="sub-header mt-5">対応ステータス</h2>
        </div>
        <div class="col-lg-9 mx-auto">
          <%= form_with model:@report, url:admin_report_path(@report), method: :patch, local: true do |f| %>
            <div class="report-status row d-flex justify-content-center">
              <%= f.select :status, Report.statuses.keys.map { |k| [t("enums.report.status.#{k}"), k] }, {}, {class: "custom-select w-25 col-4 form-control"} %>
            </div>
            <div class="row d-flex justify-content-center mt-5">
              <%= f.submit '更新', class:"col-2 mx-auto link-btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>